@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model C_18_01_Capstone.Web.ViewModels.UserViewModel

@using C_18_01_Capstone.Web.ViewModels


<div class="container">
    <form action="/User/Register" method="post" class="form-horizontal" data-toggle="validator" role="form">
        <h2>Registration Form</h2>
        <div class="form-group">
            @Html.LabelFor(m => Model.FirstName, "First name", new { @class = "col-sm-3 control-label" })
            <div class="col-sm-9">
                @Html.TextBoxFor(m => Model.FirstName, "", new { placeholder = "First Name", @class = "form-control", autofocus = true})
            </div>
            <div class="col-sm-6 col-sm-offset-3">
                @Html.ValidationMessageFor(m => Model.FirstName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => Model.LastName, "Last name", new { @class = "col-sm-3 control-label" })
            <div class="col-sm-9">
                @Html.TextBoxFor(m => Model.LastName, "", new { placeholder = "Last Name", @class = "form-control", autofocus = true})
            </div>
            <div class="col-sm-6 col-sm-offset-3">
                @Html.ValidationMessageFor(m => Model.LastName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => Model.Login, "Login", new { @class = "col-sm-3 control-label" })
            <div class="col-sm-9">
                @Html.TextBoxFor(m => Model.Login, "", new { placeholder = "Login", @class = "form-control", autofocus = true})
            </div>
            <div class="col-sm-6 col-sm-offset-3">
                @Html.ValidationMessageFor(m => Model.Login, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => Model.Password, "Password", new { @class = "col-sm-3 control-label" })
            <div class="col-sm-9">
                @Html.PasswordFor(m => Model.Password, new { placeholder = "Password", id = "password", @class = "form-control", autofocus = true, required = true })
            </div>
            <div class="col-sm-6 col-sm-offset-3">
                @Html.ValidationMessageFor(m => Model.Password, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, "Confirm Password", new { @class = "col-sm-3 control-label" })
            <div class="col-sm-9">
                @Html.PasswordFor(m => Model.Password, new { placeholder = "Password", id = "confirmPassword", @class = "form-control", autofocus = true, required = true })
            </div>
            <div class="col-sm-6 col-sm-offset-3">
                @Html.ValidationMessageFor(m => Model.Password, "", new { @class = "text-danger"})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.BirthDate, "Date of Birth", new { @class = "col-sm-3 control-label" })
            <div class="col-sm-9">
                @Html.TextBoxFor(m => Model.BirthDate, new { type = "date", @class = "form-control"})
            </div>
            <div class="col-sm-6 col-sm-offset-3">
                @Html.ValidationMessageFor(m => Model.BirthDate, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.CountryIso, "Country", new { @class = "col-sm-3 control-label" })
            <div class="col-sm-9">
                @Html.DropDownListFor(m => m.CountryIso,
                     new SelectList(
                         this.Model.Countries,
                         nameof(CountryViewModel.CountryId),
                         nameof(CountryViewModel.Name)),
                     new { @class = "form-control" , required = true })
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-4 col-sm-offset-3">
                <input class="btn btn-success form-control" type="submit" value="OK" />
            </div>
        </div>
    </form>
</div>