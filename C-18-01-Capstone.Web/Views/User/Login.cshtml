@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model C_18_01_Capstone.Web.ViewModels.LoginViewModel


<div class="container">
    <form action="/User/Login" method="post" class="form-horizontal" data-toggle="validator" role="form">
        <h2>Sign in</h2>
        <div class="form-group">
            @Html.LabelFor(m => Model.Login, new { @class = "col-sm-3 control-label" })
            <div class="col-sm-9">
                @Html.TextBoxFor(m => Model.Login, "", new { placeholder = "Login", @class = "form-control", autofocus = true })
            </div>
            <div class="col-sm-6 col-sm-offset-3">
                @Html.ValidationMessageFor(m => Model.Login, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => Model.Password, new { @class = "col-sm-3 control-label" })
            <div class="col-sm-9">
                @Html.TextBoxFor(m => Model.Password, "", new { placeholder = "Password", @class = "form-control", autofocus = true })
            </div>
            <div class="col-sm-9 col-sm-offset-3">
                @Html.ValidationMessageFor(m => Model.Password, "", new { @class = "text-danger" })
                @Html.ValidationSummary(true, "Login was unsuccessful. Please correct the errors and try again.", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-4 col-sm-offset-3">
                <input class="btn btn-success form-control" type="submit" value="OK" />
            </div>
        </div>
    </form>
</div>


